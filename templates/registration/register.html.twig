{% extends 'base.html.twig' %}

{% block title %}Enregistrement{% endblock %}

{% block body %}
    <div class="container">
        <div class="justify-content-center mt-5">
            {{ form_start(registrationForm,  {'attr': {'class': 'form-horizontal'}}) }}
                <fieldset>
                    <div id="legend">
                        <legend class="">Créer un compte</legend>
                    </div>
                    <div class="control-group">
                        <label class="control-label">{{ form_label(registrationForm.email) }}</label>
                        <div class="controls">
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'input-xlarge'}}) }}
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">{{ form_label(registrationForm.username) }}</label>
                        <div class="controls">
                            {{ form_widget(registrationForm.username, {'attr': {'class': 'input-xlarge'}}) }}
                            <p class="help-block"></p>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">{{ form_label(registrationForm.nom) }}</label>
                        <div class="controls">
                            {{ form_widget(registrationForm.nom, {'attr': {'class': 'input-xlarge'}}) }}
                            <p class="help-block"></p>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">{{ form_label(registrationForm.prenom) }}</label>
                        <div class="controls">
                            {{ form_widget(registrationForm.prenom, {'attr': {'class': 'input-xlarge'}}) }}
                            <p class="help-block"></p>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">{{ form_label(registrationForm.plainPassword) }}</label>
                        <div class="controls">
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'input-xlarge'}}) }}
                            <p class="help-block"></p>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">{{ form_label(registrationForm.agreeTerms) }}</label>
                        <div class="controls">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'input-xlarge'}}) }}
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <button class="btn btn-success">S'inscrire</button>
                            <a class="btn btn-secondary" href={{ path('app_login') }}>J'ai déjà un compte</a>
                        </div>
                    </div>

                </fieldset>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
